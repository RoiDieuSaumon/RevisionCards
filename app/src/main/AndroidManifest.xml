<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saumon.revisioncards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".cardsrevision.CardsRevisionActivity"
            android:parentActivityName=".home.HomeActivity"
            android:label="Révision" />
        <activity
            android:name=".cardsrevisionselector.CardsRevisionSelectorActivity"
            android:parentActivityName=".home.HomeActivity"
            android:label="Révision : sélection" />
        <activity
            android:name=".cardsmanager.CardsManagerActivity"
            android:parentActivityName=".home.HomeActivity"
            android:label="Fiches" />
        <activity
            android:name=".home.HomeActivity"
            android:label="Accueil"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>