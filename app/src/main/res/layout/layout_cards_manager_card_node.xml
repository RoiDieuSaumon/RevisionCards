<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="48dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/card_1">

    <TextView
        android:id="@+id/layout_cards_managers_card_node_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/layout_cards_managers_card_node_buttons_container"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/layout_cards_managers_card_node_buttons_container"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.johnkil.print.PrintView
            android:id="@+id/layout_cards_managers_card_node_edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:iconText="@string/ic_create"
            app:iconColor="@android:color/black"
            app:iconFont="fonts/material-icon-font.ttf"
            app:iconSize="20dp" />

        <com.github.johnkil.print.PrintView
            android:id="@+id/layout_cards_managers_card_node_delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:iconText="@string/ic_delete"
            app:iconColor="@android:color/black"
            app:iconFont="fonts/material-icon-font.ttf"
            app:iconSize="20dp" />

    </LinearLayout>

</RelativeLayout>